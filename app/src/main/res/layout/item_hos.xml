<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_mian"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
         <TextView
             android:id="@+id/txt_month"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="13dp"
             android:textColor="@android:color/black"
             android:fontFamily="@font/lato_semi_bold"
             android:text="February"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rel_mian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/ver_light_grey"

            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/linek"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/comment"></ImageView>
            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:fontFamily="@font/lato_regular"
                android:text="2020/02/04"></TextView>
            <TextView
                android:id="@+id/txt_2"
                android:layout_below="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="Dear parents"></TextView>
            <TextView
                android:id="@+id/txt_3"
                android:layout_below="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/hos_text"></TextView>

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>
